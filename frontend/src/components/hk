'use client';

import { useState, useEffect, useRef } from 'react';
import { X, Send, Loader2, MessageCircle, Trash2 } from 'lucide-react';
import { apiClient } from '@/lib/api';
import { useAuth } from '@/context/AuthContext';

interface Comment {
    id: number;
    content: string;
    created_at: string;
    author: {
        id: number;
        user: {
            username: string;
        };
        avatar: string | null;
        nickname?: string;
    };
}

interface CommentsDrawerProps {
    isOpen: boolean;
    onClose: () => void;
    comments: Comment[];
    commentsCount: number;
    loading: boolean;
    onAddComment: (text: string) => Promise<void>;
    onEditComment?: (commentId: number, text: string) => Promise<void>;
    onDeleteComment?: (commentId: number) => Promise<void>;
    isSending: boolean;
    isInline?: boolean;
}

export default function CommentsDrawer({
    isOpen,
    onClose,
    comments,
    commentsCount,
    loading,
    onAddComment,
    onEditComment,
    onDeleteComment,
    isSending,
    isInline = false
}: CommentsDrawerProps) {
    const { user } = useAuth();
    const [commentText, setCommentText] = useState('');
    const lastFocusedElement = useRef<HTMLElement | null>(null);
    const inputRef = useRef<HTMLInputElement>(null);

    // Handle scroll lock and focus restoration
    useEffect(() => {
        if (!isInline && isOpen) {
            lastFocusedElement.current = document.activeElement as HTMLElement;
            document.body.style.overflow = 'hidden';
            // Focus input after animation
            setTimeout(() => inputRef.current?.focus(), 100);
        } else {
            document.body.style.overflow = '';
            if (!isInline && lastFocusedElement.current) {
                lastFocusedElement.current.focus();
                lastFocusedElement.current = null;
            }
        }
        return () => {
            document.body.style.overflow = '';
        };
    }, [isOpen, isInline]);

    // Handle ESC key
    useEffect(() => {
        const handleKeyDown = (e: KeyboardEvent) => {
            if (e.key === 'Escape' && isOpen) {
                onClose();
            }
        };
        window.addEventListener('keydown', handleKeyDown);
        return () => window.removeEventListener('keydown', handleKeyDown);
    }, [isOpen, onClose]);

    const [editingCommentId, setEditingCommentId] = useState<number | null>(null);

    const handleStartEdit = (comment: Comment) => {
        setEditingCommentId(comment.id);
        setCommentText(comment.content);
        inputRef.current?.focus();
    };

    const handleCancelEdit = () => {
        setEditingCommentId(null);
        setCommentText('');
    };

    const handleSubmit = async (e: React.FormEvent) => {
        e.preventDefault();
        if (!commentText.trim()) return;

        if (editingCommentId && onEditComment) {
            await onEditComment(editingCommentId, commentText);
            handleCancelEdit();
        } else {
            await onAddComment(commentText);
            setCommentText('');
        }
    };

    const formatDate = (dateString: string) => {
        try {
            const date = new Date(dateString);
            const now = new Date();
            const diffInHours = Math.floor((now.getTime() - date.getTime()) / (1000 * 60 * 60));
            if (diffInHours < 1) {
                const diffInMinutes = Math.floor((now.getTime() - date.getTime()) / (1000 * 60));
                return diffInMinutes < 1 ? 'Just now' : `${diffInMinutes}m`;
            }
            return diffInHours < 24 ? `${diffInHours}h` : `${Math.floor(diffInHours / 24)}d`;
        } catch {
            return '';
        }
    };

    const getAvatarUrl = (author: any) => {
        return apiClient.getAvatarUrl(author);
    };

    if (!isOpen) return null;

    if (isInline) {
        return (
            <div className="drawer-panel inline-panel">
                {/* Drawer Header */}
                <div className="drawer-header">
                    <h3 style={{ fontSize: 18, fontWeight: 700, color: '#1f2937', margin: 0, display: 'flex', alignItems: 'center', gap: 8 }}>
                        Comments
                        <span style={{ fontSize: 12, fontWeight: 600, background: '#f3f4f6', color: '#6b7280', padding: '4px 10px', borderRadius: 12 }}>
                            {commentsCount}
                        </span>
                    </h3>
                    <button
                        onClick={onClose}
                        className="drawer-close-btn"
                    >
                        <X size={20} />
                    </button>
                </div>

                {/* Comments List (Scrollable) */}
                <div className="drawer-content">
                    {loading ? (
                        <div style={{ display: 'flex', justifyContent: 'center', padding: '40px' }}>
                            <Loader2 className="animate-spin text-purple-600" size={32} />
                        </div>
                    ) : (
                        <div style={{ display: 'flex', flexDirection: 'column', gap: 20 }}>
                            {comments && comments.length > 0 ? (
                                comments.map(comment => (
                                    <div key={comment.id} style={{ display: 'flex', gap: 12, alignItems: 'flex-start' }}>
                                        <img
                                            src={getAvatarUrl(comment.author)}
                                            alt="Avatar"
                                            style={{ width: 36, height: 36, borderRadius: '50%', objectFit: 'cover', flexShrink: 0 }}
                                        />
                                        <div style={{ flex: 1 }}>
                                            <div style={{ background: '#f9fafb', borderRadius: 16, borderTopLeftRadius: 4, padding: 12 }}>
                                                <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', marginBottom: 4 }}>
                                                    <span style={{ fontSize: 14, fontWeight: 600, color: '#1f2937' }}>{comment.author.nickname || comment.author.user.username}</span>
                                                    <div style={{ display: 'flex', alignItems: 'center', gap: 8 }}>
                                                        <span style={{ fontSize: 11, color: '#9ca3af' }}>{formatDate(comment.created_at)}</span>
                                                        {onDeleteComment && user && String(comment.author.id) === String(user.id) && (
                                                            <button
                                                                onClick={() => onDeleteComment(comment.id)}
                                                                style={{ background: 'none', border: 'none', cursor: 'pointer', padding: 2, color: '#ef4444' }}
                                                                title="Delete comment"
                                                            >
                                                                <Trash2 size={12} />
                                                            </button>
                                                        )}
                                                    </div>
                                                </div>
                                                <p style={{ fontSize: 14, color: '#4b5563', lineHeight: 1.5, margin: 0 }}>{comment.content}</p>
                                            </div>
                                        </div>
                                    </div>
                                ))
                            ) : (
                                <div style={{ textAlign: 'center', padding: '60px 20px', color: '#9ca3af' }}>
                                    <MessageCircle style={{ width: 48, height: 48, margin: '0 auto 12px', opacity: 0.2 }} />
                                    <p style={{ fontSize: 15, fontWeight: 600, color: '#6b7280', margin: 0 }}>No comments yet</p>
                                    <p style={{ fontSize: 13, color: '#9ca3af', marginTop: 4 }}>Start the conversation!</p>
                                </div>
                            )}
                        </div>
                    )}
                </div>

                {/* Footer (Input Form) */}
                <div className="drawer-footer">
                    <form onSubmit={handleSubmit} style={{ position: 'relative' }}>
                        <input
                            ref={inputRef}
                            type="text"
                            value={commentText}
                            onChange={(e) => setCommentText(e.target.value)}
                            placeholder="Add a comment..."
                            className="comment-input"
                        />
                        <button
                            type="submit"
                            disabled={!commentText.trim() || isSending}
                            className={`send-btn ${!commentText.trim() || isSending ? 'disabled' : ''}`}
                        >
                            {isSending ? <Loader2 style={{ width: 16, height: 16, animation: 'spin 1s linear infinite' }} /> : <Send style={{ width: 16, height: 16 }} />}
                        </button>
                    </form>
                </div>
                <style jsx>{`
                    .inline-panel {
                        border-left: 1px solid #f3f4f6;
                        height: calc(100vh - 64px); /* Header height */
                        position: sticky;
                        top: 64px;
                    }
                `}</style>
            </div>
        );
    }

    return (
        <div className="drawer-overlay" style={{ zIndex: 200 }}>
            {/* Backdrop */}
            <div
                className="drawer-backdrop"
                onClick={onClose}
            />

            {/* Drawer Panel */}
            <div className="drawer-panel">
                {/* Mobile Handle (Visible only on mobile via CSS) */}
                <div className="mobile-handle-bar">
                    <div style={{ width: 40, height: 4, background: '#e5e7eb', borderRadius: 2, margin: '12px auto 4px' }} />
                </div>

                {/* Drawer Header */}
                <div className="drawer-header">
                    <h3 style={{ fontSize: 18, fontWeight: 700, color: '#1f2937', margin: 0, display: 'flex', alignItems: 'center', gap: 8 }}>
                        Comments
                        <div style={{ fontSize: 12, fontWeight: 600, background: '#f3f4f6', color: '#6b7280', padding: '4px 10px', borderRadius: 12 }}>
                            {commentsCount}
                        </div>
                    </h3>
                    <button
                        onClick={onClose}
                        className="drawer-close-btn"
                        style={{ width: 32, height: 32 }}
                    >
                        <X size={20} />
                    </button>
                </div>

                {/* Comments List (Scrollable) */}
                <div className="drawer-content">
                    {loading ? (
                        <div style={{ display: 'flex', justifyContent: 'center', padding: '40px' }}>
                            <Loader2 className="animate-spin text-purple-600" size={32} />
                        </div>
                    ) : (
                        <div style={{ display: 'flex', flexDirection: 'column', gap: 20 }}>
                            {comments && comments.length > 0 ? (
                                comments.map(comment => (
                                    <div key={comment.id} style={{ display: 'flex', gap: 12, alignItems: 'flex-start' }}>
                                        <img
                                            src={getAvatarUrl(comment.author)}
                                            alt="Avatar"
                                            style={{ width: 36, height: 36, borderRadius: '50%', objectFit: 'cover', flexShrink: 0 }}
                                        />
                                        <div style={{ flex: 1 }}>
                                            <div style={{ background: '#f9fafb', borderRadius: 16, borderTopLeftRadius: 4, padding: 12 }}>
                                                <div style={{ display: 'flex', alignItems: 'center', justifyContent: 'space-between', marginBottom: 4 }}>
                                                    <span style={{ fontSize: 14, fontWeight: 600, color: '#1f2937' }}>{comment.author.nickname || comment.author.user.username}</span>
                                                    <div style={{ display: 'flex', alignItems: 'center', gap: 8 }}>
                                                        {onEditComment && user && String(comment.author.id) === String(user.id) && (
                                                            <button
                                                                onClick={() => handleStartEdit(comment)}
                                                                style={{
                                                                    background: '#eff6ff',
                                                                    border: '1px solid #dbeafe',
                                                                    borderRadius: 6,
                                                                    cursor: 'pointer',
                                                                    padding: 4,
                                                                    color: '#2563eb',
                                                                    display: 'flex',
                                                                    alignItems: 'center',
                                                                    justifyContent: 'center',
                                                                    transition: 'all 0.2s'
                                                                }}
                                                                title="Edit comment"
                                                            >
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" strokeWidth="2" strokeLinecap="round" strokeLinejoin="round"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                                                            </button>
                                                        )}
                                                        {onDeleteComment && user && String(comment.author.id) === String(user.id) && (
                                                            <button
                                                                onClick={() => onDeleteComment(comment.id)}
                                                                style={{
                                                                    background: '#fef2f2',
                                                                    border: '1px solid #fee2e2',
                                                                    borderRadius: 6,
                                                                    cursor: 'pointer',
                                                                    padding: 4,
                                                                    color: '#dc2626',
                                                                    display: 'flex',
                                                                    alignItems: 'center',
                                                                    justifyContent: 'center',
                                                                    transition: 'all 0.2s'
                                                                }}
                                                                title="Delete comment"
                                                            >
                                                                <Trash2 size={14} />
                                                            </button>
                                                        )}
                                                    </div>
                                                </div>
                                                <p style={{ fontSize: 14, color: '#4b5563', lineHeight: 1.5, margin: 0, wordBreak: 'break-word' }}>{comment.content}</p>
                                            </div>
                                        </div>
                                    </div>
                                ))
                            ) : (
                                <div style={{ textAlign: 'center', padding: '60px 20px', color: '#9ca3af' }}>
                                    <MessageCircle style={{ width: 48, height: 48, margin: '0 auto 12px', opacity: 0.2 }} />
                                    <p style={{ fontSize: 15, fontWeight: 600, color: '#6b7280', margin: 0 }}>No comments yet</p>
                                    <p style={{ fontSize: 13, color: '#9ca3af', marginTop: 4 }}>Start the conversation!</p>
                                </div>
                            )}
                        </div>
                    )}
                </div>

                {/* Footer (Input Form) */}
                <div className="drawer-footer">
                    <form onSubmit={handleSubmit} style={{ position: 'relative' }}>
                        <input
                            ref={inputRef}
                            type="text"
                            value={commentText}
                            onChange={(e) => setCommentText(e.target.value)}
                            placeholder="Add a comment..."
                            className="comment-input"
                        />
                        <button
                            type="submit"
                            disabled={!commentText.trim() || isSending}
                            className={`send-btn ${!commentText.trim() || isSending ? 'disabled' : ''}`}
                        >
                            {isSending ? <Loader2 style={{ width: 16, height: 16, animation: 'spin 1s linear infinite' }} /> : <Send style={{ width: 16, height: 16 }} />}
                        </button>
                    </form>
                </div>
            </div>

            <style jsx>{`
                .drawer-overlay {
                    position: fixed;
                    inset: 0;
                    display: flex;
                    justify-content: flex-end;
                    z-index: 200;
                }

                .drawer-backdrop {
                    position: absolute;
                    inset: 0;
                    background: rgba(0, 0, 0, 0.3);
                    backdrop-filter: blur(4px);
                    animation: fadeIn 0.3s ease-out;
                    cursor: pointer;
                }

                .drawer-panel {
                    width: 100%;
                    height: 100%;
                    background: #fff;
                    position: relative;
                    display: flex;
                    flex-direction: column;
                    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.15);
                    animation: slideIn 0.3s cubic-bezier(0.16, 1, 0.3, 1);
                    z-index: 201;
                }

                .drawer-header {
                    padding: 20px 24px;
                    border-bottom: 1px solid #f3f4f6;
                    display: flex;
                    align-items: center;
                    justify-content: space-between;
                    background: #fff;
                }

                .drawer-close-btn {
                    background: #f3f4f6;
                    border: none;
                    border-radius: 50%;
                    padding: 8px;
                    cursor: pointer;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    color: #4b5563;
                    transition: all 0.2s;
                    z-index: 10;
                }
                .drawer-close-btn:hover {
                    background: #e5e7eb;
                }

                .drawer-content {
                    flex: 1;
                    overflow-y: auto;
                    padding: 20px 24px;
                }

                .drawer-footer {
                    padding: 16px 24px;
                    border-top: 1px solid #f3f4f6;
                    background: #fff;
                    position: sticky;
                    bottom: 0;
                }

                .comment-input {
                    width: 100%;
                    padding: 12px 50px 12px 16px;
                    border: 2px solid #e5e7eb;
                    border-radius: 24px;
                    font-size: 14px;
                    outline: none;
                    transition: all 0.2s;
                    background: #f9fafb;
                }
                .comment-input:focus {
                    border-color: #7c3aed;
                    background: #fff;
                }

                .send-btn {
                    position: absolute;
                    right: 8px;
                    top: 50%;
                    transform: translateY(-50%);
                    padding: 8px;
                    background: #7c3aed;
                    color: #fff;
                    border: none;
                    border-radius: 50%;
                    cursor: pointer;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    transition: all 0.2s;
                }
                .send-btn.disabled {
                    background: #e5e7eb;
                    cursor: not-allowed;
                }

                .mobile-handle-bar {
                    display: none;
                }

                @media (max-width: 767px) {
                    .mobile-handle-bar {
                        display: block;
                        width: 100%;
                    }
                    .drawer-panel {
                        animation: slideUp 0.3s cubic-bezier(0.16, 1, 0.3, 1);
                        border-top-left-radius: 20px;
                        border-top-right-radius: 20px;
                        margin-top: auto; 
                        height: 85dvh; 
                        width: 100%;
                        background: #fff;
                        box-shadow: 0 -4px 30px rgba(0,0,0,0.15);
                    }
                    .drawer-header {
                        padding: 8px 20px 16px;
                        border-bottom: 1px solid #f3f4f6;
                    }
                    .drawer-content {
                        padding: 16px;
                    }
                }

                @media (min-width: 768px) {
                    .drawer-panel {
                        width: 400px;
                        max-width: 100%;
                    }
                }

                @media (min-width: 1024px) {
                    .drawer-panel {
                        width: 400px; /* Fixed width */
                        animation-duration: 0.4s; /* Slightly more restrained motion */
                    }
                }
                
                @keyframes spin {
                    0% { transform: rotate(0deg); }
                    100% { transform: rotate(360deg); }
                }
                @keyframes slideIn {
                    from { transform: translateX(100%); opacity: 0; }
                    to { transform: translateX(0); opacity: 1; }
                }
                @keyframes slideUp {
                    from { transform: translateY(100%); opacity: 0; }
                    to { transform: translateY(0); opacity: 1; }
                }
                @keyframes fadeIn {
                    from { opacity: 0; }
                    to { opacity: 1; }
                }
            `}</style>
        </div>
    );
}
